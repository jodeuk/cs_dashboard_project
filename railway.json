{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "uvicorn app:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "ignore": [
    "backend/",
    "frontend/",
    "data/",
    ".git/",
    ".gitignore",
    "README.md",
    "main.py",
    "cs_utils.py"
  ]
} 